        <div class="page-header">
          <h1 id="forms">Sign up for a free consultation!</h1>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-lg-12 col-centered">
        <% if flash %>
          <% flash.each do |type, message| %>
            <ul>
               <% message.each do |key,value| %>
                  <li><%= "#{key.to_s.capitalize.gsub('_', ' ')}  #{value.first.gsub('_', ' ')}" %> </li>
               <% end %>
            </ul>
          <% end %>
        <% end %>
        <div class="well bs-component">
          <%= form_for @lead, html: {class: "form-horizontal"} ,:url => { :action => "create" }  do |f|  %>
            <fieldset>
              <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Name*</label>
                <div class="col-lg-10">
                  <%= f.text_field  :name, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Email*</label>
                <div class="col-lg-10">
                  <%= f.text_field  :email, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Phone Number (10 digits)*</label>
                <div class="col-lg-10">
                  <%= f.text_field  :phone_number, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
           <fieldset>
          <%end%>
        </div>
      </div>
    </div>
